{% extends 'base.html.twig' %}

{% block content %}
  <table>
    <thead>
      <th>Name</th>
      <th>Symbol</th>
      <th>Operations</th>
    </thead>
    <tbody>
      {% for fund in funds %}
        <tr>
          <td class="symbol">{{ fund.symbol }}</td>
          <td class="name">{{ fund.name }}</td>
          <td>
            <div class="operations">
              <input type="button" value="Edit" onclick="window.location.href='/funds/{{ fund.symbol }}/edit'">
              <input type="button" value="Delete">
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <div>
    <input type="button" value="Create Fund" onclick="window.location.href='/funds/create'">
  </div>
{% endblock %}
