{% extends 'base.html.twig' %}

{% block page_title %}
  <h2>{{ symbol }}: {{ name }}</h2>
{% endblock %}

{% block content %}
  <table>
    <thead>
      <th><a href="">Security</a></th>
      <th><a href="">Name</a></th>
      <th><a href="">Weight</a></th>
    </thead>
    <tbody>
      {% for position in positions %}
        <tr>
          <td class="symbol">{{ position.security }}</td>
          <td class="name">{{ position.name }}</td>
          <td class="weight">{{ position.weight|number_format(2) }}%</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
