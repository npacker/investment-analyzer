{% extends 'base.html.twig' %}

{% block page_title %}
  <h2>Edit Fund <em>{{ symbol }}: {{ name }}</em></h2>
{% endblock %}

{% block content %}
  <form enctype="multipart/form-data" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{ name }}" size="40" required>
    <label for="positions">Positions</label>
    <input type="file" name="positions" accept=".csv">
    <div class="checkbox">
      <input type="checkbox" name="replace_positions" id="replace_positions" value="replace_positions"><label for="replace_positions">Replace existing positions</label>
    </div>
    <div class="form-actions">
      <input type="submit" value="Submit">
    </div>
  </form>
{% endblock %}
